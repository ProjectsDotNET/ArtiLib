<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - ArtiLib</title>
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <script src="~/Scripts/modernizr-2.6.2.js"></script>
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Client", "Index", "Client", new { area = "" }, new { @class = "navbar-brand" })
                @Html.ActionLink("Artisan", "Index", "Artisan", new { area = "" }, new { @class = "navbar-brand" })
                @Html.ActionLink("Prestation", "Index", "Prestation", new { area = "" }, new { @class = "navbar-brand" })
                @Html.ActionLink("Statut Rendez-Vous", "Index", "StatutRendezVous", new { area = "" }, new { @class = "navbar-brand" })
                @Html.ActionLink("Disponibilité de l'Artisan", "Index", "DisponibiliteArtisan", new { area = "" }, new { @class = "navbar-brand" })
                @Html.ActionLink("Avis", "Index", "Avis", new { area = "" }, new { @class = "navbar-brand" })
                @Html.ActionLink("Prestation Artisan", "Index", "PrestationArtisan", new { area = "" }, new { @class = "navbar-brand" })
                @Html.ActionLink("Rendez-vous", "Index", "RendezVous", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav"></ul>
            </div>
        </div>
    </div>

    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - ArtiLib</p>
        </footer>
    </div>

    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
</body>
</html>